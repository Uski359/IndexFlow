{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha"],
    "outDir": "./dist"
  },
  "include": [
    "scripts/**/*.ts",
    "test/**/*.ts",
    "infra/hardhat.config.ts",
    "hardhat.config.ts",
    "typechain-types/**/*.ts"
  ]
}
